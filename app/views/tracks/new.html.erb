<div class="form-horizontal">
    <%= form_for(@track, multipart: true) do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
        <%= f.text_field :name, 
                        placeholder: "Please name your file",
                        class:"form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label "How long was each trial?", class:"col-sm-2 control-label" %>
        <div class="col-sm-8">
        <%= f.text_field :trial_time, placeholder: "In Seconds",
                                      class:"form-control" %>
        </div>
      </div>
        <%= f.label "How long was the calibration?" %>
        <%= f.text_field :calibration_time, placeholder: "In Seconds" %>

        <%= f.label "How long was the recalibration between trials?" %>
        <%= f.text_field :recalibration_time, placeholder: "In Seconds" %>

        <%= f.label "Select a File" %>
        <%= f.file_field :input %>
        
        <%= f.submit 'Process Tracking Data' %>

  
    <% end %>
</div>