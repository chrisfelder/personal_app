<div class="form-horizontal">
    <%= form_for(@track, multipart: true) do |f| %>
    
      <div class="form-group">
        <%= f.label :name, class: "col-sm-4 control-label" %>
        
        <div class="col-sm-6">
          <%= f.text_field :name, placeholder: "Please name your file",
                            class:"form-control"%>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "How many trials were run?",
                    class:"col-sm-4 control-label" %>
        
        <div class="col-sm-6">
        
          <%= f.text_field "number_of_trials", placeholder: "Number of trials",
                            class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "How long was each trial?",
                     class:"col-sm-4 control-label" %>
        
        <div class="col-sm-6">
        
          <%= f.text_field :trial_time, placeholder: "In seconds",
                            class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "How long was the calibration?",
                    class:"col-sm-4 control-label" %>
                    
        <div class="col-sm-6">
        
          <%= f.text_field :calibration_time, placeholder: "In seconds",
                            class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "How long was the recalibration between trials?",
                    class:"col-sm-4 control-label" %>
                    
        <div class="col-sm-6">
          <%= f.text_field :recalibration_time, 
                            placeholder: "Insert 0 if no recalibration step",
                            class:"form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        
        <%= f.label "Select a File", class:"col-sm-4 control-label" %>
        
        <div class="col-sm-6">
          
          <%= f.file_field :input %>
        
        </div>
      </div>
      
      <div class="form-grou center">
        <%= f.submit 'Process Tracking Data', class: "btn btn-primary" %>
      </div>

  
    <% end %>
</div>