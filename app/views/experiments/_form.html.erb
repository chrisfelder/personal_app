        <%= form_for @character do |f| %>
        
            <%= render 'shared/characters_error_messages' %>

            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
            
            <%= f.label :strength %><br>
            <%= f.text_field :strength, class: "form-control" %>
            
            <%= f.label :defense %><br>
            <%= f.text_field :defense, class: "form-control" %>
            
            <%= f.hidden_field :hp_current, :value => 100 %>
            <%= f.hidden_field :hp_max, :value => 100 %>

            <br>
            
            <%= f.submit "Make a Character!", class: "btn btn-primary" %>

            <% end %>